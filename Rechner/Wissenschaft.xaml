<Page x:Class="Rechner.Wissenschaft"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Rechner"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="900"
      Title="Wissenschaft">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="75*"/>
            <ColumnDefinition Width="25*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Vertical">

            

            <StackPanel Orientation="Horizontal" Height="30" Margin="8">
                <Button x:Name="modulo"    Content="%"  Click="Button_Click_Modulo"    Width="130" Height="20" Margin="5"/>
                <Button x:Name="entfernen" Content="CE" Click="Button_Click_Entfernen" Width="130" Height="20" Margin="5"/>
                <Button x:Name="entf"      Content="C"  Click="Button_Click_EntF"      Width="130" Height="20" Margin="5"/>
                <Button x:Name="back"      Content="⌫" Click="Button_Click_Back"      Width="130" Height="20" Margin="5"/>
            </StackPanel>
            <StackPanel  Orientation="Horizontal" Height="30" Margin="5">
                <Button x:Name="sin" Content="sin"  Width="130" Height="20" Margin="5" Click="sin_Click"/>
                <Button x:Name="cos" Content="cos"  Width="130" Height="20" Margin="5" Click="cos_Click"/>
                <Button x:Name="tan" Content="tan"  Width="130" Height="20" Margin="5" Click="tan_Click"/>
                <Button x:Name="cot" Content="cot"  Width="130" Height="20" Margin="5" Click="cot_Click"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Height="30" Margin="8">
                <Button x:Name="log"           Content="log"  Width="130" Height="20" Margin="5" Click="log_Click"/>
                <Button x:Name="zehnHoch"      Content="10ˣ"  Width="130" Height="20" Margin="5" Click="zehnHoch_Click"/>
                <Button x:Name="eulerscheZahl" Content="eˣ"   Width="130" Height="20" Margin="5" Click="eulerscheZahl_Click"/>
                <Button x:Name="ln"            Content="ln"   Width="130" Height="20" Margin="5" Click="ln_Click"/>

            </StackPanel>

            <StackPanel Orientation="Horizontal" Height="30" Margin="8">
                <Button x:Name="kehrwert" Content="1/x" Click="Button_Click_Kehrwert" Width="130" Height="20" Margin="5"/>
                <Button x:Name="quadrat"  Content="x²"  Click="Button_Click_Quadrat"  Width="130" Height="20" Margin="5"/>
                <Button x:Name="root"     Content="²√x" Click="Button_Click_Root"     Width="130" Height="20" Margin="5"/>
                <Button x:Name="durch"    Content="÷"   Click="durch_Click"           Width="130" Height="20" Margin="5" />
            </StackPanel>

            <StackPanel Orientation="Horizontal" Height="30" Margin="8">
                <Button x:Name="sieben" Content="7" Click="Button_Click" Width="130" Height="20" Margin="5" FontWeight="ExtraBold"/>
                <Button x:Name="acht"   Content="8" Click="Button_Click" Width="130" Height="20" Margin="5" FontWeight="ExtraBold"/>
                <Button x:Name="neun"   Content="9" Click="Button_Click" Width="130" Height="20" Margin="5" FontWeight="ExtraBold"/>
                <Button x:Name="mal"    Content="x" Click="mal_Click"    Width="130" Height="20" Margin="5"  />
            </StackPanel>
            <StackPanel Orientation="Horizontal" Height="30" Margin="8">
                <Button x:Name="vier"  Content="4" Click="Button_Click" Width="130" Height="20" Margin="5" FontWeight="ExtraBold"/>
                <Button x:Name="fuenf" Content="5" Click="Button_Click" Width="130" Height="20" Margin="5" FontWeight="ExtraBold"/>
                <Button x:Name="sechs" Content="6" Click="Button_Click" Width="130" Height="20" Margin="5" FontWeight="ExtraBold"/>
                <Button x:Name="minus" Content="-" Click="minus_Click"  Width="130" Height="20" Margin="5" />
            </StackPanel>
            <StackPanel Orientation="Horizontal" Height="30" Margin="8">
                <Button x:Name="eins" Content="1" Click="Button_Click" Width="130" Height="20" Margin="5" FontWeight="ExtraBold"/>
                <Button x:Name="zwei" Content="2" Click="Button_Click" Width="130" Height="20" Margin="5" FontWeight="ExtraBold"/>
                <Button x:Name="drei" Content="3" Click="Button_Click" Width="130" Height="20" Margin="5" FontWeight="ExtraBold"/>
                <Button x:Name="plus" Content="+" Click="plus_Click"   Width="130" Height="20" Margin="5" />

            </StackPanel>
            <StackPanel Orientation="Horizontal" Height="30" Margin="8">
                <Button x:Name="minusplus" Content="+/-" Click="Button_Click_Plus_Minus" Width="130" Height="20" Margin="5"/>
                <Button x:Name="zero"      Content="0"   Click="Button_Click"            Width="130" Height="20" Margin="5" FontWeight="ExtraBold"/>
                <Button x:Name="komma"     Content=","   Click="Button_Click"            Width="130" Height="20" Margin="5"/>
                <Button x:Name="gleish"    Content="="   Click="Button_Click_Gleish"     Width="130" Height="20" Margin="5" Background="LightBlue"/>
            </StackPanel>

        </StackPanel>
       

    </Grid>
</Page>
